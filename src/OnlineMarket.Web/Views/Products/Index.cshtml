@using OnlineMarket.Service.DTOs;
@{
    ViewData["Title"] = "Products";
}

@model IEnumerable<ProductForResultDto>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .button-group {
        display: flex;
        gap: 4px;
    }

        .button-group > a {
            display: inline-block;
            padding: 4px 8px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }

            .button-group > a:hover {
                background-color: #0069d9;
            }

    #HeadText {
        text-align: center;
        color: brown;
    }
    #register-buttons{
        text-align: center;
        margin-top: 10px;
    }
</style>

<h1 id="HeadText">All Products</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Count</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Count</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td class="button-group">
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
 </div>

<div id="register-buttons">
    <a asp-area="" asp-controller="Products" asp-action="Create" class="btn btn-success">Register new Phone</a>
</div>