@using OnlineMarket.Service.DTOs;


@{
    ViewData["Title"] = "Create";
}
@model ProductForResultDto


<div class="container mt-5">
    <h1>Create Product</h1>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Count" class="form-label">Product Count</label>
                    <input asp-for="Count" type="number" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="form-label">Product Price</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <input asp-for="Description" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6 offset-md-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
