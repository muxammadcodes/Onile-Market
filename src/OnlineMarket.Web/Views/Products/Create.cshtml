@using OnlineMarket.Service.DTOs;


@{
    ViewData["Title"] = "Create";
}
@model ProductForResultDto


<style>
    /* Custom styles for form inputs */
    .form-control {
        border: none;
        border-radius: 0;
        border-bottom: 1px solid #ccc;
        font-size: 16px;
        box-shadow: none;
    }

    /* Custom styles for form labels */
    .form-label {
        font-weight: bold;
        color: #555;
    }

    /* Custom styles for form buttons */
    .btn-primary {
        background-color: #EF3B3A;
        border-color: #EF3B3A;
        color: #fff;
        font-weight: bold;
        border-radius: 20px;
        padding: 10px 30px;
        margin-top: 20px;
    }

    .btn-secondary {
        background-color: #555;
        border-color: #555;
        color: #fff;
        font-weight: bold;
        border-radius: 20px;
        padding: 10px 30px;
        margin-top: 20px;
    }

    /* Custom styles for page title */
    h1 {
        color: #EF3B3A;
        text-align: center;
        font-weight: bold;
    }

    /* Custom styles for back button */
    .bck-button {
        text-align: center;
        color: #EF3B3A;
        font-weight: bold;
        margin-top: 20px;
    }
</style>

<div class="container mt-5">
    <h1>Create Product</h1>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Count" class="form-label">Product Count</label>
                    <input asp-for="Count" type="number" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="form-label">Product Price</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <input asp-for="Description" type="text" step="0.01" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="cr_button">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-3">
        <div class="bck-button">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
